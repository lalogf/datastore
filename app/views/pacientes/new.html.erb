
<div class="container"> 
	<h2>Ficha de Paciente</h2>



	<div class = "row">
		
		
		<div class="col-md-12">

			<%= bootstrap_form_for @paciente do |f| %>
			<!-- 	<%= f.alert_message "Por favor corregir estos errores:" %> -->

			<div class="col-md-6">
				<%= f.text_field(:primer_nombre, placeholder: "Primer Nombre") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:segundo_nombre, placeholder: "Segundo Nombre") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:apellido_paterno, placeholder: "Apellido Paterno") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:apellido_materno, placeholder: "Apellido Materno") %>
			</div>
			<div class="col-md-6">
				<%= f.date_select(:nacimiento, value: Date.today, order: [:day, :month, :year], use_month_names: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :start_year => 1910, :end_year => 2015 ) %>
			</div> 
			<div class="col-md-6">
				<%= f.text_field(:dni, label:"DNI", placeholder:"12345678")%>
			</div>
			<div class="col-md-7">
				<%= f.text_field(:email, placeholder: "mail@example.com")%>
			</div>
			<div class="col-md-12">
				<%= f.text_field(:direccion, placeholder: "Calle San Martin 123 Int B")%>
			</div>
			<div class="col-md-4">
				<%= f.select(:departamento, ["Amazonas", "Áncash", "Apurímac", "Arequipa", "Ayacucho", "Cajamarca", "Cusco", "Huancavelica", "Huánuco", "Ica", "Junín", "La Libertad", "Lambayeque", "Lima", "Loreto", "Madre De Dios", "Moquegua", "Pasco", "Piura", "Puno", "San Martín", "Tacna", "Tumbes", "Ucayali"], selected: "Lambayeque")%>
			</div>

			<div class="col-md-4">
				<%= f.select(:provincia, ["Chiclayo","Ferreñafe", "Lambayeque"], selected: "Chiclayo")%>
			</div>
			<div class="col-md-4">
				<%= f.select(:distrito, ["Chiclayo","Ferreñafe", "Lambayeque"], selected: "Chiclayo")%>
			</div>



			<div class="col-md-12">
				<%= f.submit  "Guardar", class: "btn btn-success" %>
			</div>
			<% end %>
		</div>
	</div>
</div>