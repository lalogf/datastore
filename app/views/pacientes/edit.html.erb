<div class="container">
	<div class="row">
		<%= bootstrap_form_for @paciente, method: "put" do |f| %>
		<div class="col-md-6">
			<%= f.text_field(:primer_nombre, label: "Primer Nombre") %>
		</div>
		<div class="col-md-6">
			<%= f.text_field(:segundo_nombre, label:"Segundo Nombre")%>
		</div>
		<div class="col-md-6">
			<%= f.text_field(:apellido_paterno, label:"Apellido Paterno")%>
		</div>
		<div class="col-md-6">
			<%= f.text_field(:apellido_materno, label:"Apellido Materno")%>
		</div>
		<div class="col-md-6">
			<%= f.date_select(:nacimiento, label:"Fecha de Nacimiento", order: [:day, :month, :year],use_month_names: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']) %>
		</div> 
		<div class="col-md-6">
			<%= f.text_field(:dni, label:"DNI")%>
		</div>
		<div class="col-md-12">
			<%=f.text_field(:email, label:"Email")%>
		</div>
		<div class="col-md-12">
			<%=f.text_field(:direccion, label:"DirecciÃ³n")%>
		</div>
		<div class="col-md-4">
			<%=f.text_field(:distrito, label:"Distrito")%>
		</div>		
		<div class="col-md-4">
			<%=f.text_field(:provincia, label:"Provincia")%>
		</div>
		<div class="col-md-4">
			<%=f.text_field(:departamento, label:"Departamento")%>
		</div>
		<div class="col-md-6">
			<div class="col-xs-6">
				<%= submit_tag "Editar",class: "btn btn-success" %>
			</div>
			
			<%end%>
		</div>
		<%= bootstrap_form_for @paciente, method: 'delete' do  %>
		<div class="col-xs-6">
			<%= submit_tag "Eliminar", class: "btn btn-danger" %>
		</div>
		<% end %>
	</div>
</div>

