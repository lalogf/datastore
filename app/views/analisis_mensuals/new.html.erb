<h1>Probando</h1>
"hto", "hb", "peso_pre", "peso_post", "urea_pre", "urea_post", "urr", "ktv", "tgp", "tgo", "month"

<div class="container">
	<div class="row">
		<div class="col-md-4">
			<%= bootstrap_form_for [@paciente, @am] do |f| %>
			<div class="col-md-12">
				<%= f.date_select(:fecha, value: Date.today, discard_day: true, order: [:month, :year], use_month_names:['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre'], :start_year => 2014, :end_year => Date.today.year) %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:hto, placeholder: "30", label: "Hematocrito") %>
			</div>
		
			<div class="col-md-6">
				<%= f.text_field(:hb, label: "Hemoglobina", :readonly => true) %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:peso_pre, placeholder: "10") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:peso_post, placeholder: "10") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:urea_pre, placeholder: "10") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:urea_post, placeholder: "10") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:urr, placeholder: "10", :readonly => true) %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:ktv, placeholder: "10", :readonly => true) %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:tgp, placeholder: "10") %>
			</div>
			<div class="col-md-6">
				<%= f.text_field(:tgo, placeholder: "10") %>
			</div>
			<div class="col-md-12">
				<%= f.submit  "Guardar", class: "btn btn-success" %>
			</div>
			<% end %>
		</div>
	</div>
</div>
